    <div class="coupon-container">
        <div class="phone-screen">
            <img class="coupon-image" src="https://crm.shenquanwaimai.com/resource/image/crmapi/shangou1.png" alt="Coupon Background">

            <!-- 复制按钮 -->
            <button id="couponButton" class="keycopy" data-clipboard-text="￥WLwp4cvR0Z2￥/ HU7405">
                复制口令去淘宝领红包
            </button>
        </div>
        <p>点击按钮复制淘宝优惠口令</p>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.6/clipboard.min.js"></script>
    <script>
        // 固定口令
        var couponCode = "￥WLwp4cvR0Z2￥/ HU7405";

        // 初始化 ClipboardJS 来处理复制功能
        var clipboard = new ClipboardJS('.keycopy', {
            text: function() {
                return couponCode; // 复制固定的口令
            }
        });

        clipboard.on('success', function(e) {
            alert("口令已复制，正在跳转到淘宝APP...");
            
            // 复制成功后，自动打开淘宝应用（移动端）
            setTimeout(function() {
                window.location.href = "tbopen://m.taobao.com";
            }, 500); // 延迟500毫秒后跳转
        });
        
        clipboard.on('error', function(e) {
            alert("复制失败，请手动复制口令。");
        });
    </script>

